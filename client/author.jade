template(name='author')
  if groupData
    .panel.panel-primary
      .panel-heading
        span.title.panel-title Author &ldquo;#{author}&rdquo;
      .panel-body
        each messages
          +readMessage
      .panel-footer
        i= messageCount
        | by #{author} in group #{group}
        span.space
        //-
          xxx can't search global yet -- would need to adjust publication
          if wildLink
            a.btn.btn-warning(href=wildLink) Search All Groups
  else
    +badGroup
